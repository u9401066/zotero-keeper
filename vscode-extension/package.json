{
    "name": "vscode-zotero-mcp",
    "displayName": "Zotero + PubMed MCP",
    "description": "AI-powered research assistant - integrates Zotero reference management and PubMed literature search with GitHub Copilot. One-click setup for researchers!",
    "version": "0.5.2",
    "publisher": "u9401066",
    "license": "Apache-2.0",
    "icon": "resources/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/u9401066/zotero-keeper"
    },
    "bugs": {
        "url": "https://github.com/u9401066/zotero-keeper/issues"
    },
    "homepage": "https://github.com/u9401066/zotero-keeper#readme",
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "AI",
        "Chat",
        "Other"
    ],
    "keywords": [
        "zotero",
        "pubmed",
        "mcp",
        "model context protocol",
        "copilot",
        "research",
        "bibliography",
        "reference manager",
        "literature search",
        "academic",
        "one-click",
        "self-contained"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "zotero-mcp.servers",
                "label": "Zotero + PubMed Research Tools"
            }
        ],
        "configuration": {
            "title": "Zotero MCP",
            "properties": {
                "zoteroMcp.useEmbeddedPython": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Use embedded Python environment (recommended for non-technical users). When enabled, the extension will automatically download and configure Python - no manual installation required!",
                    "order": 0
                },
                "zoteroMcp.pythonPath": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Path to Python interpreter. Leave empty for auto-detect. Only used when `#zoteroMcp.useEmbeddedPython#` is disabled.",
                    "order": 1
                },
                "zoteroMcp.zoteroHost": {
                    "type": "string",
                    "default": "localhost",
                    "description": "Zotero host address (where Zotero is running)",
                    "order": 10
                },
                "zoteroMcp.zoteroPort": {
                    "type": "number",
                    "default": 23119,
                    "description": "Zotero API port number",
                    "order": 11
                },
                "zoteroMcp.ncbiEmail": {
                    "type": "string",
                    "default": "",
                    "description": "Email for NCBI/PubMed API (required by NCBI policy)",
                    "order": 20
                },
                "zoteroMcp.ncbiApiKey": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "NCBI API Key for higher rate limits (10 req/s instead of 3 req/s). [Get API Key](https://www.ncbi.nlm.nih.gov/account/settings/)",
                    "order": 21
                },
                "zoteroMcp.coreApiKey": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "CORE API Key for open access search (5000 req/day). [Get API Key](https://core.ac.uk/services/api)",
                    "order": 22
                },
                "zoteroMcp.semanticScholarApiKey": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Semantic Scholar API Key for AI-powered search. [Get API Key](https://www.semanticscholar.org/product/api)",
                    "order": 23
                },
                "zoteroMcp.httpProxy": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "HTTP proxy for API requests (e.g., `http://proxy:8080`)",
                    "order": 24
                },
                "zoteroMcp.httpsProxy": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "HTTPS proxy for API requests (e.g., `https://proxy:8080`)",
                    "order": 25
                },
                "zoteroMcp.openUrlResolver": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Your institution's OpenURL link resolver URL for full-text access. Example: `https://resolver.library.edu/openurl`. Leave empty if you don't have institutional access.",
                    "order": 26
                },
                "zoteroMcp.openUrlPreset": {
                    "type": "string",
                    "default": "",
                    "enum": ["", "ntu", "ncku", "nthu", "nycu", "harvard", "stanford", "mit", "yale", "oxford", "cambridge"],
                    "enumDescriptions": [
                        "None (use custom URL)",
                        "National Taiwan University (Âè∞Â§ß)",
                        "National Cheng Kung University (ÊàêÂ§ß)",
                        "National Tsing Hua University (Ê∏ÖÂ§ß)",
                        "National Yang Ming Chiao Tung University (ÈôΩÊòé‰∫§Â§ß)",
                        "Harvard University",
                        "Stanford University",
                        "MIT",
                        "Yale University",
                        "Oxford University",
                        "Cambridge University"
                    ],
                    "markdownDescription": "Select your institution from presets. This will override the custom URL above.",
                    "order": 27
                },
                "zoteroMcp.enableZoteroKeeper": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Zotero Keeper MCP server",
                    "order": 30
                },
                "zoteroMcp.enablePubmedSearch": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable PubMed Search MCP server",
                    "order": 31
                },
                "zoteroMcp.autoInstallPackages": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically install required Python packages",
                    "order": 40
                }
            }
        },
        "commands": [
            {
                "command": "zoteroMcp.setupWizard",
                "title": "Zotero MCP: Setup Wizard (One-Click Setup)",
                "icon": "$(wand)"
            },
            {
                "command": "zoteroMcp.showQuickMenu",
                "title": "Zotero MCP: Quick Menu"
            },
            {
                "command": "zoteroMcp.showStatistics",
                "title": "Zotero MCP: Show Usage Statistics"
            },
            {
                "command": "zoteroMcp.showApiStatus",
                "title": "Zotero MCP: Show API Status"
            },
            {
                "command": "zoteroMcp.resetStatistics",
                "title": "Zotero MCP: Reset Statistics"
            },
            {
                "command": "zoteroMcp.checkConnection",
                "title": "Zotero MCP: Check Zotero Connection"
            },
            {
                "command": "zoteroMcp.installPackages",
                "title": "Zotero MCP: Install Python Packages"
            },
            {
                "command": "zoteroMcp.reinstallPython",
                "title": "Zotero MCP: Reinstall Embedded Python"
            },
            {
                "command": "zoteroMcp.installSkills",
                "title": "Zotero MCP: Install Copilot Research Skills"
            },
            {
                "command": "zoteroMcp.showStatus",
                "title": "Zotero MCP: Show Full Status Page"
            },
            {
                "command": "zoteroMcp.openSettings",
                "title": "Zotero MCP: Open Settings"
            },
            {
                "command": "zoteroMcp.openZotero",
                "title": "Zotero MCP: Open Zotero Application"
            }
        ],
        "walkthroughs": [
            {
                "id": "zoteroMcp.welcome",
                "title": "Get Started with Zotero + PubMed MCP",
                "description": "Set up your AI-powered research assistant in just ONE click!",
                "steps": [
                    {
                        "id": "oneclick",
                        "title": "üöÄ One-Click Setup",
                        "description": "Click the button below and we'll handle everything automatically!\n\n[Run Setup Wizard](command:zoteroMcp.setupWizard)\n\nThis will:\n‚Ä¢ Download Python (if needed)\n‚Ä¢ Install required packages\n‚Ä¢ Check Zotero connection",
                        "media": {
                            "markdown": "resources/walkthrough/oneclick.md"
                        },
                        "completionEvents": ["onContext:zoteroMcp.packagesReady"]
                    },
                    {
                        "id": "zotero",
                        "title": "Connect to Zotero",
                        "description": "Make sure Zotero 7 is running on your computer.\n\n[Check Connection](command:zoteroMcp.checkConnection)\n\n[Download Zotero](https://www.zotero.org/download/)",
                        "media": {
                            "markdown": "resources/walkthrough/zotero.md"
                        },
                        "completionEvents": ["onContext:zoteroMcp.zoteroConnected"]
                    },
                    {
                        "id": "ready",
                        "title": "You're All Set! üéâ",
                        "description": "Try asking GitHub Copilot:\n\n‚Ä¢ \"Search PubMed for diabetes treatment\"\n‚Ä¢ \"Show my recent Zotero references\"\n‚Ä¢ \"Save this article to Zotero\"\n\n[Open Copilot Chat](command:workbench.action.chat.open)",
                        "media": {
                            "markdown": "resources/walkthrough/ready.md"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src/**/*.ts",
        "test": "vscode-test",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.99.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.0.0",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3"
    },
    "extensionDependencies": [],
    "extensionPack": []
}
